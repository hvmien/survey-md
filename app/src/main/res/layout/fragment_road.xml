<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        app:cardBackgroundColor="@color/colorBlueDark"
        app:cardCornerRadius="0dp">

        <com.example.mienhv1.survey.utils.view.CSTextView
            style="@style/TextView.Header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="Vị trí của đường"
            android:textAllCaps="true" />
    </android.support.v7.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--Duong di truoc cua hang-->
            <com.example.mienhv1.survey.utils.view.CSTextView
                style="@style/TextView.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="8dp"
                android:text="Đường đi trước cửa hàng"
                app:textAllCaps="true" />

            <android.support.v7.widget.CardView
                style="@style/CardView.WrapEdiText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.example.mienhv1.survey.utils.view.CSRadioGroup
                    android:id="@+id/gr_direction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp" />
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>