<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_margin="4dp"
    android:clickable="true"
    android:foreground="?selectableItemBackground"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_survey_banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/img_exmaple_survey_thumb" />

        <TextView
            android:id="@+id/txt_point"
            android:layout_width="60dp"
            android:layout_height="32dp"
            android:layout_alignBottom="@+id/iv_thumb"
            android:layout_alignRight="@+id/iv_thumb"
            android:layout_margin="4dp"
            android:background="@drawable/bg_text_oval"
            android:gravity="center"
            android:text="100XP"
            android:textColor="@color/colorWhite"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/background_black_60opacity"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/txt_title_subject_survey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="Title Survey"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/title_time_expire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="22-12-2016"
                android:textColor="@color/colorWhite"
                android:textSize="13sp" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>