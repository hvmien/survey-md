<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.example.mienhv1.survey.utils.view.CSTextView
            android:id="@+id/txt_title"
            style="@style/TextView.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="8dp"
            android:text="@string/title_address"
            app:textAllCaps="true" />

        <com.example.mienhv1.survey.utils.view.CSGroupCheckbox
            android:id="@+id/gr_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </com.example.mienhv1.survey.utils.view.CSGroupCheckbox>
    </LinearLayout>

    <ProgressBar
        android:minHeight="40dp"
        android:maxHeight="40dp"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/cs_progressbar"
        android:id="@+id/checkbox_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:visibility="gone" />

</RelativeLayout>