<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.AppTheme"></style>

    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryDark">@android:color/background_dark</item>
        <item name="android:windowBackground">@color/default_windows_background</item>
    </style>

    <style name="Toolbar" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/holo_blue_dark</item>
    </style>

    <style name="style_button_oval">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/bg_button_oval</item>
    </style>

    <style name="style_button_oval_gray">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/bg_button_oval_gray</item>
    </style>

    <style name="ImagePickerTheme" parent="ef_BaseTheme">
        <item name="colorPrimary">#607D8B</item>
        <item name="colorPrimaryDark">#455A64</item>
        <item name="colorAccent">@color/ef_colorAccent</item>
    </style>

    <style name="CSTextView">
        <item name="android:textColor">@color/colorApplication</item>
        <item name="font">@string/Roboto_Regular</item>
    </style>

    <style name="CSTextView.Light">
        <item name="font">@string/Roboto_Light</item>
    </style>
    <style name="CSTextView.Medium">
        <item name="font">@string/Roboto_Medium</item>
    </style>

    <style name="CSEdiText">
        <item name="android:textSize">14sp</item>
        <item name="font">@string/Roboto_Regular</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@drawable/bg_cs_edit_text</item>
    </style>
    <style name="CSButton">
        <item name="android:textColor">@color/colorApplication</item>
        <item name="android:height">38dp</item>
        <item name="android:textSize">14sp</item>
        <item name="font">@string/Roboto_Regular</item>
        <item name="android:background">@drawable/bg_button</item>
    </style>

    <style name="CSTextView.Link">
        <item name="android:clickable">true</item>
        <item name="android:textColor">@drawable/link_selector</item>
    </style>

    <style name="CSTextView.LinkLight">
        <item name="android:clickable">true</item>
        <item name="android:textColor">@drawable/link_selector_light</item>
    </style>

    <style name="CSButtonPickImage">
        <item name="android:textColor">@color/colorApplication</item>
        <item name="android:height">38dp</item>
        <item name="android:width">38dp</item>
        <item name="font">@string/Roboto_Regular</item>
        <item name="android:background">@mipmap/ic_pickimage</item>
    </style>
    <style name="CSButtonCameraOnly">
        <item name="android:textColor">@color/colorApplication</item>
        <item name="android:height">38dp</item>
        <item name="android:width">38dp</item>
        <item name="font">@string/Roboto_Regular</item>
        <item name="android:background">@mipmap/ic_cameraonly</item>
    </style>
</resources>
