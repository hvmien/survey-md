<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.AppTheme">
    </style>

    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryDark">@android:color/background_dark</item>
    </style>
    <style name="Toolbar"  parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/holo_blue_dark</item>
    </style>

    <style name="style_button_oval">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/bg_button_oval</item>
    </style>

    <style name="style_button_oval_gray">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/bg_button_oval_gray</item>
    </style>

</resources>
